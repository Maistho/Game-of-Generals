<Window x:Class="Game_of_Generals.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="650" Width="650">
    <Grid Name="pnlMainGrid" Background="Beige">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="540"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="480"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Name="pnlOverlayGrid" Grid.Column="1" Grid.Row="1" Panel.ZIndex="100">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Name="pnlP1PiecesGrid" Grid.Row="0" Visibility="Hidden">
            </Grid>
            <Grid Name="pnlP2PiecesGrid" Grid.Row="1" Visibility="Hidden">
            </Grid>
        </Grid>
        <Grid Name="pnlBoardGrid" Grid.Column="1" Grid.Row="1" ShowGridLines="True">
        </Grid>
    </Grid>
</Window>
